{
  "compilerOptions": {
    "target": "es2018",
    "moduleResolution": "node",
    "module": "es2020",
    "allowJs" : true,
    "strict": true,
    "jsx": "preserve",
    "lib": ["DOM","DOM.Iterable","ESNext"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"],
}